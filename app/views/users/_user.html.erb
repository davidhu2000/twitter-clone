<div>
  
  <div class="col-md-10">
    <a href="<%= user_path(user) %>" class="list-group-item">
        <%= gravatar_for(user, size: 50) %>
        <%= user.name %>
    </a>
  </div>
  
  <div class="col-md-2 delete-button">
    <% if current_user.admin? && !current_user?(user) %>
          <%= link_to 'delete', user_path(user), method: :delete, data: { confirm: "You sure?" }, class:"btn btn-xs btn-danger" %>
    <% end %>
  </div>
</div>