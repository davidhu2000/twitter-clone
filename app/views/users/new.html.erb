<%= provide(:title, 'Sign Up') %>

<h1>Sign Up</h1>
<p>Sign up for this site.</p>

<div class="row">
  <div class="col-md-8 col-md-offset-2 well">
    <%= form_for @user do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :email %>
      <%= f.text_field :email %>
    
      <%= f.submit("Sign Up", class:"btn btn-success") %>
  
    <% end %>
  </div>
</div>
